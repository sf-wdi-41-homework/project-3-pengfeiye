<div class="container overall">
<div class="backdrop">
<h1 id="dashboard"style="text-align: center">Edit <%=@chatbox.name%></h1>

<div class="col-xs-6 col-xs-offset-3">
<div class="col-xs-8 col-xs-offset-2">
<%= form_with scope: :chatboxes, model: @chatbox, class: "form-horizontal", method: :PUT do |form| %>
<div class="form-group">
		<%= form.label :name, "Chatbox Name:" %>
		<%= form.text_field(:name, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :username, "Invite Users:" %>
		<%= form.select :username, @allusers %>
</div>
<div class="form-group">
		<%= form.submit('Submit', class: 'btn-sm btn-primary') %>
</div>
<% end %>
</div>
<div class='form-group  col-sm-6'>
	<h2>Current Members</h2>
	<div class="edit_scroll">
		<%@chatbox.users.each do |user|%>
		<h3><%=user.username%></h3>
		<%if @chatbox.owner_id == user.id%>
		<span class="time">
			<%=@chatbox.name.capitalize%> Group Owner
		</span>
		<hr>
		<%end%>
		<%end%>
	</div>
</div>
<div class='form-group col-sm-6'>
	<h2>Pending Members</h2>
	<div class="edit_scroll">
		<%@pendingUser.each do |user|%>
			<h3><%=user.username%></h3>
			<%=link_to "Approve", approve_group_path(id:user.id, group:@chatbox.id)%>
		<%end%>
	</div>
</div>
</div>
</div>
</div>
