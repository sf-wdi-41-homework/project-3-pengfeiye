<h1 id="dashboard"style="text-align: center">Edit <%=@chatbox.name%></h1>

<div style="margin-top: 20px;" class="row">
<div class="col-xs-4 col-xs-offset-4">
<%= form_with scope: :chatboxes, model: @chatbox, class: "form-horizontal", method: :PUT do |form| %>
<div class="form-group">
		<%= form.label :name, "Chatbox Name:" %>
		<%= form.text_field(:name, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :username, "Invite Users:" %>
		<%= form.select :username, @allusers %>
</div>
<div class="form-group">
		<%= form.submit('Submit', class: 'btn-sm btn-primary') %>
</div>
<% end %>
<div class='form-group'>

  <%@chatbox.users.each do |user|%>
  <%=user.username%>
  <%end%>
</div>
</div>
</div>
