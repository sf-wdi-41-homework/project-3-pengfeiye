<h1 id="dashboard"style="text-align: center">Create Chatbox</h1>

<div style="margin-top: 20px;" class="row">
<div class="col-xs-4 col-xs-offset-4">
<%= form_with scope: :chatboxes, model: @chatbox, class: "form-horizontal createChat", remote: true do |form| %>
<div class="form-group">
		<%= form.label :name, "Chatbox Name:" %>
		<%= form.text_field(:name, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :username, "Invite Users:" %>
		<%= form.select :username, @allusers %>
</div>
<div class="hide">
		<%= form.text_field(:chatType, class: 'form-control', value:"GroupTxt") %>
</div>
<div class="form-group">
		<%= form.submit('Submit', class: 'btn-sm btn-primary') %>
</div>
<% end %>
</div>
</div>
